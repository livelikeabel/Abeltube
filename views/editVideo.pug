extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video._id), method="post")
            input(name="title", type="text", placeholder="Title", value=video.title)
            textarea(name="description", placeholder="Description")=video.description
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.deleteVideo}`) Delete